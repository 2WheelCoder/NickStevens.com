.deliverables
	clear both
	margin-bottom 4rem

	& ul
		@extend $clearfix

	& li
		@extend $clearfix

		background $blue url('../img/nick-desk.jpg')
		background-size contain
		column(1/3, gutter: 0)
		height 0
		padding-bottom (100/3)%
		overflow hidden

		@media $screen-lg-min
			column(1/5, gutter: 0)
			padding-bottom (100/5)%

	& a
		position relative
		display block
		height 0
		padding-bottom 100%
		text-align center
		width 100%

		&:after
			background rgba(255,255,255,0.7)
			content ''
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			z-index 3

			@media $screen-lg-min
				opacity 0

		@media $screen-lg-min
			&:hover
				& h5
					opacity 1
					transition opacity .3s ease

				&:after
					opacity 1
					transition opacity .3s ease

	& h5
		color $blue
		font-size 1.1rem
		margin 0
		padding 0.5rem
		position relative
		z-index 6

		@media $screen-lg-min
			opacity 0

	& .userflow
		background $blue url('../img/userflow.png')
		background-size contain

	& .github
		background $cueOrange
		position relative

		&:after
			@extend $icon

			color $white
			content "\e603"
			font-size 4rem
			position absolute
			text-align center
			top 1rem
			width 100%