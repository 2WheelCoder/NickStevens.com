.btn-cta
	background $darkBlue
	color $white
	display inline-block
	font-size pxToRem(14)
	font-weight bold
	padding .3rem .6rem

	&:hover
		background $blue

	&.full-width
		text-align center
		width 100%

	&.next
		text-align center
		width 60%
		float right
		padding .4rem 0
		font-size 1.3rem

	& span
		font-size 1.8rem
		margin-left .6rem
		vertical-align middle

