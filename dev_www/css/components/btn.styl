.btn-cta
	background $blue
	color $white
	display inline-block
	font-size pxToRem(14)
	font-weight bold
	padding .3rem .6rem

	transition background-color 0.3s ease

	&:hover
		background $darkBlue

	&.full-width
		text-align center
		width 100%

	&.next
		float right
		font-size 1.3rem
		margin-top $mediumSpace
		padding .4rem 0
		text-align center
		width 60%

	& span
		font-size 1.8rem
		margin-left .6rem
		vertical-align middle

