.nav-social
	& h2
		@extend $visuallyHidden
		
	& ul
		display flex
		justify-content space-between

	& li
		display inline-block

		&:last-child
			margin 0

	& .icon
		color $grey
		font-size 1.8rem

		transition transform 0.2s ease

		&:hover
			// font-size 2.5rem
			transform scale3d(1.30, 1.30, 1)

	& .icon-github
		font-size 2.2rem

	& .icon-twitter
		font-size 2rem

	& .icon-500px
		&:hover
			// font-size 2rem
			transform scale3d(1.30, 1.30, 1)