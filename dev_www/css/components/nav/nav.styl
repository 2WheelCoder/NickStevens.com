.nav-primary
	background $white
	display none
	position absolute
	left 0
	top 100%
	z-index -3

	@media $screen-sm-min
		display block
		padding-bottom 0.2rem
		position static
		z-index 0

	& h2
		@extend $visuallyHidden

	& li
		display block
		font-size pxToRem(20)

		@media $screen-sm-min
			@extend $slashAfter
			display inline-block
			font-size pxToRem(14)
			margin-right 1.4rem

			&::after
				bottom 0.27em
				color $grey
				font-size 0.75rem
				right -1.1rem

			&:last-child
				margin-right 0

				&::after
					display none

		&:last-child
			& a
				border-bottom 1px solid rgba(0,0,0,0.1)

				@media $screen-sm-min
					border none

		& a
			color $blue
			border-bottom 1px solid rgba(0,0,0,0.1)
			display block
			font-size 1rem
			padding .75rem 0

			&:hover
				text-decoration overline

			@media $screen-sm-min
				border none
				padding 0