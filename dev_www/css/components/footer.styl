.footer-primary
	padding-top 2rem

	& > div,
	& .footer-logo,
	& .nav-social
		display flex
		margin-bottom 2rem
		text-align center
		
		@media (min-width: 668px)
			column(1/3, gutter: 0)
			display flex
			height 0
			padding-bottom 33.3333333333333%
			text-align center

	& > div
		display none

		@media (min-width: 668px)
			display flex

	& .icon-logo,
	& .disciplines
	& .nav-social ul
		align-self center
		width 100%

		@media (min-width: 668px)
			padding-top 100%

	& .icon-logo
		color $blue
		font-size pxToRem(200)

	& .nav-social
		& li
			display inline-block
			margin-right .9rem
			vertical-align middle

			&:last-child
				margin 0

		& .icon
			color $grey
			font-size 1.8rem

		& .icon-github
			font-size 2.2rem

		& .icon-twitter
			font-size 2rem

	& h2
		@extend $visuallyHidden