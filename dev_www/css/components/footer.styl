.footer-primary
	clear both
	padding-top 2rem

	& > div,
	& .footer-logo,
	& .nav-social
		display flex
		margin-bottom 2rem
		text-align center
		
		@media (min-width: 668px)
			column(1/3, gutter: 0)
			display flex
			height 0
			padding-bottom 33.3333333333333%
			text-align center

	& .nav-social
		padding-left 2rem
		padding-right 2rem

		@media (min-width: 668px)
			padding 0

	& > div
		display none

		@media (min-width: 668px)
			display flex

	& .icon-logo,
	& .disciplines
	& .nav-social ul
		align-self center
		width 100%

		@media (min-width: 668px)
			padding-top 100%

	& .icon-logo
		color $blue
		font-size pxToRem(200)