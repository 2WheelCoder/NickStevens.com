.form-contact
	margin $mediumSpace auto 0
	position relative
	width pxToRem(274)

	& .form-contact-intro
		margin-bottom $mediumSpace
		
		& p
			line-height 1.5

			&:last-of-type
				// text-align right

	& label
		color $darkBlue
		display table-row
		font-size pxToRem(11)
		font-weight lighter
		text-transform uppercase
		margin-bottom $smallSpace

		& > span

			@media $screen-sm-min
				left pxToRem(-82)
				padding-top 0.6rem
				position absolute
				text-align right
				width pxToRem(62)

	& label > input

		@media $screen-sm-min
			margin-left 0

	& input,
	& textarea
		border 1px solid $grey
		display block
		height 2rem
		margin pxToRem(6) 0 pxToRem(12)
		padding .6rem pxToRem(14)
		// width 100%
		width pxToRem(274)

		@media $screen-sm-min
			display table-cell
			margin-top 0
	
	& textarea
		height pxToRem(146)
		resize none

	& .response
		color $errorRed
		display none

		&.success
			color $successGreen

		&.error
			color $errorRed