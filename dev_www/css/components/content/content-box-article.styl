.content-box-article
	background $darkGrey

	&:hover
		& .icon
			transform scale3d(1.3, 1.3, 1)

	& .icon
		color $blue
		font-size 2.3rem
		left 0
		position absolute
		right 0
		text-align center
		top 15%

		transition transform .2s ease
		transform-origin center

	& article
		margin 30% 5% 0

	& h2
		font-size 1.2rem
		margin-bottom 0.5rem
		text-align center

	& p
		font-size 0.9rem
		position relative
		text-align center
		margin 0 auto
		width 80%

		&::before
			content "\e60a"
			font-family 'icons'
			font-size 1.2rem
			speak none
			font-style normal
			font-weight normal
			font-variant normal
			text-transform none
			line-height 1
			position absolute
			left -13%
			top .23rem