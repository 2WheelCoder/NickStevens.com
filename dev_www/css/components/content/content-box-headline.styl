.content-box-headline
	background $lightBlue

	& h2
		align-self center
		font-size 2rem
		line-height 1.3
		margin-bottom 0
		padding 100% 1rem 0
		text-align center
		width 100%

		& span
			font-size 4rem
			vertical-align -0.5rem
			margin-left 1rem

	&.content-box-headline-home
		display none

		@media $screen-md-min
			display flex

.content-box-headline-icon
	background $lightBlue
	text-align center

	& .icon
		align-self center
		font-size pxToRem(85)
		padding-top 100%
		text-align center
		width 100%

	& h2
		bottom 20%
		font-size 2rem
		font-weight normal
		left 0
		margin 0
		position absolute
		right 0
		text-align center
		width 100%

.content-box-headline-tagline
	& p
		align-self center
		font-size 2rem
		font-weight bold
		line-height 1.3
		margin-bottom 0
		padding 100% 1rem 0
		text-align center
		width 100%
		line-height 1