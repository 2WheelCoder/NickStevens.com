.content-box-tweet
	background $darkBlue

	&:hover
		& .icon
			transform scale3d(1.3, 1.3, 1)

	& .icon-twitter
		color $white
		font-size 2.3rem
		left 0
		position absolute
		right 0
		text-align center
		top 20%

		transition transform .2s ease
		transform-origin center

	& .content-box-tweet-content
		margin-top 50%
		overflow visible
		width 100%

	& p
		font-weight bold
		line-height 1.5
		margin 0 auto
		position relative
		text-align center
		max-width 70%

