.content-projects
	.content-box-project
		column(1/2, gutter: 0)
		display flex
		padding-bottom 50%

		@media $screen-md-min
			column(1/3, gutter: 0)
			display flex
			padding-bottom (1/3 * 100)%

		&:after
			display block

		& [class^="icon-"],
		& [class*=" icon-"]
			font-size pxToRem(68px)

	.content-box-project-cue
		& [class^="icon-"],
		& [class*=" icon-"]
			font-size pxToRem(52px)

	.content-box-project-hooch
		& [class^="icon-"],
		& [class*=" icon-"]
			font-size pxToRem(52px)