.content-box-portrait
	background url('../img/nick-desk.jpg')
	background-size cover

	& h2
		color $darkGrey
		font-size 1.1rem
		margin 0
		padding 0.5rem
		position relative
		top 60%
		z-index 6

		position relative
		display block
		height 0
		padding-bottom 100%
		text-align center
		width 100%
		opacity 0

		transition opacity .3s ease

	&:after
		background rgba(255,255,255,0.7)
		content ''
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 3

		transition opacity .3s ease

		@media $screen-lg-min
			opacity 0

	@media $screen-lg-min
		&:hover
			opacity 1

			&:after
				opacity 1