// add a bg image
.content
	background $darkGrey

	& > li
		color $white
		display flex
		position relative
		overflow hidden

	& > li > a
		color $white
		display flex
		padding-bottom 100%
		text-align center
		width 100%

	& li img
		max-width 100%

.content-interior
	& .headline
		& h2
			text-align center
			width 100%

.content-box.expanded
	column(1/1, gutter: 0)

	background #fff
	color $grey
	height auto
	padding-bottom 0

	// transition all .5s ease

	& h3
		@extend $headingLeftSlashes

	& h4
		color $blue
		font-size 1.1rem
		margin-top 3rem

	& h4:first-child
		margin-top 0

	& p
		color $grey

	@media $screen-md-min
		column(2/3, gutter: 0)
		float right
		height 0
		padding-bottom 100*(8/3) %
	

	& .stagger
		column(3/4, gutter: 0)
		float right
		margin-bottom 4rem