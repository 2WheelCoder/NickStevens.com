.content-box-project
	background-image linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 10%, rgba(0,0,0,.65) 50%, rgba(0,0,0,0) 70%, rgba(0,0,0,0) 100%), url('../img/turntable.jpg')
	background-position center
	background-repeat no-repeat
	background-size contain

	&:after
		background-color rgba(50, 122, 187, 0.6)
		content ""
		display block
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		z-index 0
	
	&:hover
		& [class^="icon-"],
		& [class*=" icon-"]
			transform scale3d(1.2, 1.2, 1)

	& a
		position relative
		z-index 9

	& h4
		align-self center
		color $white
		font-size 2rem
		margin 0 auto
		padding-top 100%
		position relative
		width 100%
		z-index 3

	& [class^="icon-"],
	& [class*=" icon-"]
		font-size 4rem
		width 100%

		transition transform .3s ease

.content-box-project-page
	& p
		align-self center
		color $white
		font-size 1.3rem
		// font-weight bold
		margin 0 auto
		padding 100% 1rem 0
		position relative
		text-align center
		width 100%
		z-index 3

		@media $screen-md-min
			display none
	
	& + .content-box-description
		display none

		@media $screen-md-min
			display flex

