.nav-primary
	background $white
	box-shadow 0 20px 60px rgba(0,0,0,0.1)
	display none
	position absolute
	left 0
	top 100%
	z-index -3

	@media $screen-sm-min
		display block
		padding-bottom 0.2rem
		position static

	& li
		display block
		font-size pxToRem(20)

		@media $screen-sm-min
			@extend $slashAfter
			display inline-block
			font-size pxToRem(14)
			margin-right 1.4rem

			&::after
				color $grey
				font-size 0.6rem
				right -1rem

			&:last-child
				margin-right 0

				&::after
					display none

		&:last-child
			& a
				border-bottom none

		& a
			color $blue
			border-bottom 1px solid rgba(0,0,0,0.1)
			display block
			padding .75rem 0

			@media $screen-sm-min
				border none
				padding 0