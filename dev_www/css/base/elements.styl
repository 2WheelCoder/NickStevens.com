*, *::before, *::after
	box-sizing border-box
	margin-top 0

::-moz-selection
	background-color: $goji
	color #fff

::selection
	background-color: $goji

html
	font-size $globalFontSize

body
	font-family $primaryFont
	font-weight normal
	margin 0
	padding-top pxToRem(97)

a, p, button, input
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

a
	text-decoration none

ul, ol
	margin-bottom 0
	padding-left 0

li
	list-style none

h1, h2, h3, h4, h5, h6
	// margin 0

button
	appearance none
	background-color transparent
	border none
	box-shadow none
	cursor pointer
	outline none