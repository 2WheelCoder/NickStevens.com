$responsiveBox
	height 0
	padding-bottom 100%
	
	@media $screen-sm-min
		column(1/2, gutter: 0)
		padding-bottom 50%

	@media $screen-md-min
		column(1/3, gutter: 0)
		padding-bottom 33.3333333333333%

		&:before,
		&:after
			display block

		&.wide
			column(2/3, gutter: 0)

